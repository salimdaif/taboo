<%= content_for(:after_js) do  %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tour/0.11.0/js/bootstrap-tour.js"></script>
<script>
var tour = new Tour({
  backdrop: true,
  template: " <div class='popover tour'><div class='arrow'></div><h3 class='popover-title'></h3><div class='popover-content'></div><div class='popover-navigation'><button class='btn btn-default' data-role='prev'>« Prev</button><span data-role='separator'>|</span><button class='btn btn-default' data-role='next'>Next »</button></div><button class='btn btn-default' data-role='end'>Close tour</button></div> " ,

  steps: [
  {
    element: "#message-head",
    title: "User status",
    content: "here you can see if your friend is ready to enter the room"
  },
  {
    element: "#new_message2",
    title: "Messages",
    content: "All the conversation are encrypted to make sure only you and the one your talking with can see it"
  },
  {
    element: "#messages-div",
    title: "Messages",
    content: "There is no storage of your message if you refresh this page it all goes away"
  }
]});


// Initialize the tour
tour.init();

// Start the tour

$(document).ready(function(){
  tour.start();
  tour.restart();
})


</script>

<!-- Pusher-->
  <script src="https://js.pusher.com/4.0/pusher.min.js"></script>

  <script>

    // Enable pusher logging - don't include this in production
    Pusher.logToConsole = true;

    var pusher = new Pusher('3df64582bb7a34201be2', {
      encrypted: true
    });

    var channel = pusher.subscribe("presence-room-<%= @room.id %>");
    channel.bind('client-new-message', function(data) {
      // alert(data.message);
      $(".message-list").append("<li>"+data.message+"</li>");

      var $imagediv = $("<img></img>").attr({
                      alt: "User Avatar",
                      src: "<%= @target.avatar %>"
                    }).addClass("img-circle"),
            $spanct = $("<span></span>").addClass("chat-img1 pull-right").append($imagediv),
          $chatdiv = $("<div></div>").addClass("chat-body1 clearfix").append("<p>"+ data.message+"</p>"),
          $listdiv = $("<li></li>").addClass( "left clearfix" ).append($spanct, $chatdiv);

       $("#messages-box").append($listdiv );
      $("#messages-div").animate({ scrollTop: $('#messages-div').prop("scrollHeight")}, 1000);


    });




  channel.bind('pusher:subscription_succeeded', function() {

    $('.spinner').hide();
    if (channel.members.count >= 2){
      // alert("You are NOT alone here");
      $('#online').show();
      $('#away').hide();
    };

  });

  channel.bind('pusher:member_added', function() {
  // alert("Your friend joined the conversation");
  $('#online').show();
  $('#away').hide();

  });

  channel.bind('pusher:member_removed', function(member) {
     alert("Your friend left, go to matches to find a new one");
    $('#online').hide();
    $('#away').show();

  });



  // Sender


    $('#send').click(function(event){
      event.preventDefault();

       $("#messages-div").animate({ scrollTop: $('#messages-div').prop("scrollHeight")}, 1000);

      var text = $('textarea#new_message2').val();
      var channel = pusher.subscribe("presence-room-<%= @room.id %>");
      channel.trigger('client-new-message', {message: text})


        var
            $imagediv = $("<img></img>").attr({
                      alt: "User Avatar",
                      src: "<%= @user.avatar %>"
                    }).addClass("img-circle"),
            $spanct = $("<span></span>").addClass("chat-img1 pull-left").append($imagediv),
          $chatdiv = $("<div></div>").addClass("chat-body1 clearfix").append("<p>"+text+"</p>"),
          $listdiv = $("<li></li>").addClass( "left clearfix" ).append($spanct ,$chatdiv);

      $("#messages-box").append($listdiv );
      $('textarea#new_message2').val("");




    })


  </script>
<% end %>

